{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
  "src/**/*",
  "dist/my-project.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "temp",
    "certificates",
    "templates"
  ]
}