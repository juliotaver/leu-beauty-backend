{
  "name": "loyalty-backend",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc && npm run copy-assets",
    "dev": "nodemon src/index.ts",
    "copy-assets": "mkdir -p dist/public/passes dist/certificates dist/templates && cp -r certificates/* dist/certificates/ && cp -r templates/* dist/templates/",
    "render-build": "./scripts/build.sh"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^11.0.0",
    "fs-extra": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.0",
    "nodemon": "^2.0.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}